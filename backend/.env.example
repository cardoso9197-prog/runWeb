# Run Run Backend Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=runrun
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Google Maps API (for distance/duration calculation)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Firebase Cloud Messaging (for push notifications)
FCM_SERVER_KEY=your_fcm_server_key_here

# Payment Gateways

# Stripe (Credit/Debit Cards)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# PayStack (Alternative for cards)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Orange Money API
ORANGE_MONEY_API_URL=https://api.orange.com/orange-money-webpay/dev/v1
ORANGE_MONEY_MERCHANT_ID=your_orange_merchant_id
ORANGE_MONEY_API_KEY=your_orange_api_key
ORANGE_MONEY_CLIENT_ID=your_orange_client_id
ORANGE_MONEY_CLIENT_SECRET=your_orange_client_secret

# MTN Mobile Money API
MTN_MOMO_API_URL=https://sandbox.momodeveloper.mtn.com
MTN_MOMO_SUBSCRIPTION_KEY=your_mtn_subscription_key
MTN_MOMO_API_USER=your_mtn_api_user
MTN_MOMO_API_KEY=your_mtn_api_key
MTN_MOMO_CALLBACK_URL=https://your-server.com/api/payments/mtn/callback

# Pricing Configuration (in XOF - West African CFA franc)
BASE_FARE=500
PER_KM_RATE=200
PER_MINUTE_RATE=50
MINIMUM_FARE=1000
BOOKING_FEE=200

# Pricing multipliers by vehicle type
RUNRUN_MULTIPLIER=1.0
MOTO_MULTIPLIER=0.7
COMFORT_MULTIPLIER=1.3
XL_MULTIPLIER=1.5

# Commission rates (%)
PLATFORM_COMMISSION=20
DRIVER_EARNINGS=80

# Driver matching
MAX_MATCHING_RADIUS_KM=5
RIDE_ACCEPTANCE_TIMEOUT_SECONDS=15

# WebSocket Configuration
SOCKET_PING_INTERVAL=25000
SOCKET_PING_TIMEOUT=60000

# Admin Configuration
ADMIN_EMAIL=admin@runrungb.com
ADMIN_PASSWORD=change_this_password_immediately

# Support
SUPPORT_EMAIL=suporte@runrungb.com
SUPPORT_PHONE=+245955000000
